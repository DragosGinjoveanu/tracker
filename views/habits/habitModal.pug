extends ../layouts/loggedInLayout

block content
    .card
        .card-header.text-center
            h4(style="color:green;")= message
        .card-body.text-center
            form(action='/habits/create/' + habit, method='POST')
                .mb-3
                    input#label.form-control(type='text', name='label' placeholder='add a label')
                .mb-3
                    select.form-select(name='color')
                        option(selected, value='black') Color:
                        option(value='black') black (default)
                        option(value='green') green
                        option(value='blue') blue
                        option(value='red') red
                button.btn.btn-success(type='submit', name='yes') Add
                button.btn.btn-danger(type='submit', name='no') No

