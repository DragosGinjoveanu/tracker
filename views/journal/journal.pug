extends ../layout

block content
    .card
        .card-body.text-center
            h2= user + '\'s journal'
            -var createPage = 'http://localhost:3000/journal/create/' + user;
            a(class="btn btn-secondary" href=createPage) Add another page
            -var home = 'http://localhost:3000/' + user;
            a(class="btn btn-primary" href=home) Home
    ul
        each val in pages
            .card
                .card-body
                    h3.card-title(style="color:#585858;")=val.title 
                    h5.card-text= val.content
                    -var editUrl = 'http://localhost:3000/journal/page/' + val.id;
                    -var deleteUrl = 'http://localhost:3000/journal/delete/page/' + val.id;
                    .card-footer
                        form(method="POST" action=deleteUrl)
                            a(class="btn btn-success" href=editUrl) Edit
                            button.btn.btn-danger(type='submit') Delete